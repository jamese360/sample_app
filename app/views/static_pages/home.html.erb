<% provide(:title, 'Home') %>
<div class="center hero-unit">
  <h1>The all-seeing Robo Eye</h1>
  <h2>Search the web with the Gaze Search Engine; your robotic eye in the sky</h2>


	<%= form_tag(search_path, :method => 'get', :class => 'form-search') do %>
		<p>
			<%= text_field_tag(:q, params[:q], :class => 'input-xlarge') %>
			<%= submit_tag("Search", :name => nil, :class => 'btn') %>
		</p>
	<% end %>


</div>


